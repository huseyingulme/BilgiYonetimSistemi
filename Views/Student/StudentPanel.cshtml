@model dynamic
@{
    ViewBag.Title = "Ogrenci Paneli";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Paneli</title>
    <link href="/css/StudentPanel.css" rel="stylesheet"> <!-- Ayrı CSS dosyası -->
    <script src="/js/StudentPanel.js" defer></script> <!-- Ayrı JS dosyası -->
</head>
<body>
    <div class="flex min-h-screen">
        <!-- Yan Panel -->
        <aside class="w-64 bg-gray-800 text-white flex flex-col">
            <div class="p-4 text-center font-bold text-lg">Öğrenci Paneli</div>
            <nav class="flex-grow">
                <ul class="space-y-4 p-4">
                    <li><a href="#dashboard" class="nav-link">Öğrenci Bilgisi</a></li>
                    <li><a href="#lessons" class="nav-link">Kayıtlı Derslerim</a></li>
                    <li><a href="#select-lessons" class="nav-link">Ders Seçimi</a></li>
                    <li><a href="#profile-update" class="nav-link">Profil Güncelleme</a></li>
                    <li><a href="#transcript" class="nav-link">Transkript</a></li>
                    <li><a href="/Account/Logout" class="nav-link">Çıkış Yap</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Ana İçerik -->
        <main class="flex-grow bg-gray-100 p-6">
            <!-- Öğrenci Bilgisi Bölümü -->
            <section id="dashboard" class="hidden">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-4">Öğrenci Bilgileri</h1>
                    <p><strong>ID:</strong> @Model.StudentID</p>
                    <p><strong>Ad Soyad:</strong> @Model.FirstName @Model.LastName</p>
                </div>
            </section>

            <!-- Kayıtlı Derslerim Bölümü -->
            <section id="lessons" class="hidden">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-4">Kayıtlı Derslerim</h1>
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-gray-800 text-white">
                            <tr>
                                <th class="p-2">#</th>
                                <th class="p-2">Ders Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RegisteredCourses != null && Model.RegisteredCourses.Any())
                            {
                                int index = 1;
                                foreach (var course in Model.RegisteredCourses)
                                {
                                    <tr class="border-b">
                                        <td class="p-2">@index++</td>
                                        <td class="p-2">@course.CourseName</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="2" class="p-2 text-center">Henüz kayıtlı dersiniz bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Ders Seçimi Bölümü -->
            <section id="select-lessons" class="hidden">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-4">Ders Seçimi</h1>
                    <form method="post" action="/Student/SubmitCourseSelections">
                        <div class="space-y-4">
                            @for (int i = 0; i < Model.AvailableCourses.Count(); i++)
                            {
                                <div class="flex items-center space-x-4">
                                    <input type="checkbox" name="selectedCourseIds" value="@Model.AvailableCourses[i].CourseID" class="form-checkbox">
                                    <label>@Model.AvailableCourses[i].CourseName</label>
                                </div>
                            }
                        </div>
                        <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded-lg mt-4 hover:bg-blue-600">Ders Seç</button>
                    </form>
                </div>
            </section>

            <!-- Profil Güncelleme Bölümü -->
            <section id="profile-update" class="hidden">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-4">Profil Güncelleme</h1>
                    <form method="post" action="/Student/UpdateProfile">
                        <div class="space-y-4">
                            <div>
                                <label for="firstName" class="block text-sm font-bold text-gray-700">Ad</label>
                                <input type="text" id="firstName" name="FirstName" value="@Model.FirstName" class="w-full border rounded-lg p-2">
                            </div>
                            <div>
                                <label for="lastName" class="block text-sm font-bold text-gray-700">Soyad</label>
                                <input type="text" id="lastName" name="LastName" value="@Model.LastName" class="w-full border rounded-lg p-2">
                            </div>
                            <div>
                                <label for="email" class="block text-sm font-bold text-gray-700">E-posta</label>
                                <input type="email" id="email" name="Email" value="@Model.Email" class="w-full border rounded-lg p-2">
                            </div>
                        </div>
                        <button type="submit" class="bg-green-500 text-white font-bold py-2 px-4 rounded-lg mt-4 hover:bg-green-600">Güncelle</button>
                    </form>
                </div>
            </section>

            <!-- Transkript Bölümü -->
            <section id="transcript" class="hidden">
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-4">Transkript</h1>
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-gray-800 text-white">
                            <tr>
                                <th class="p-2">Ders Kodu</th>
                                <th class="p-2">Ders Adı</th>
                                <th class="p-2">Not</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Transcripts != null && Model.Transcripts.Any())
                            {
                                foreach (var transcript in Model.Transcripts)
                                {
                                    <tr class="border-b">
                                        <td class="p-2">@transcript.CourseID</td>
                                        <td class="p-2">@transcript.CourseName</td>
                                        <td class="p-2">@transcript.Grade</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="p-2 text-center">Henüz transkript verisi bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </main>
    </div>
</body>
</html>

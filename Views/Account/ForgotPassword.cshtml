@{
    ViewBag.Title = "Şifre Yenileme";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/reset-password.css" rel="stylesheet" type="text/css" />
    <script src="~/js/reset-password.js" defer></script>
</head>
<body>

    <div class="container">
        <h2>Şifre Yenileme</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="success-message">
                @ViewBag.SuccessMessage
            </div>
        }

        <form method="post" action="@Url.Action("ResetPassword", "Account")">
            <div class="form-group">
                <input type="text" id="username" name="username" required placeholder="Kullanıcı adınızı girin" />
            </div>

            <div class="form-group">
                <input type="password" id="newPassword" name="newPassword" required placeholder="Yeni şifrenizi girin" />
            </div>

            <div class="form-group">
                <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Yeni şifrenizi onaylayın" />
            </div>

            <button type="submit" class="btn">Şifreyi Yenile</button>
        </form>
    </div>

</body>
</html>

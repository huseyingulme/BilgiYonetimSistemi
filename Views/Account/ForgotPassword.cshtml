@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifremi Unuttum - KTÜ</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <div class="forgot-password-container">
        <div class="logo-container">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b7/Karadeniz_Technical_University_logo.svg/1024px-Karadeniz_Technical_University_logo.svg.png" alt="KTÜ Logo" class="logo">
        </div>

        <h1>Şifremi Unuttum</h1>
        <p>Hesabınıza bağlı e-posta adresinizi girin ve şifrenizi sıfırlayın.</p>

        <!-- Şifre sıfırlama formu -->
        <form class="forgot-password-form" method="post" asp-action="SendResetLink" asp-controller="Account">
            <input type="email" name="email" placeholder="E-posta Adresiniz" required>
            <button type="submit" class="submit-btn">Şifre Sıfırlama Linki Gönder</button>
        </form>

        <br />
        @if (ViewBag.Message != null)
        {
            <p style="color:green;">@ViewBag.Message</p>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color:red;">@ViewBag.ErrorMessage</p>
        }

        <br>
        <a asp-controller="Account" asp-action="Login" class="back-to-login">Geri Dön</a>
    </div>

    <script src="~/js/script.js"></script>
</body>
</html>
